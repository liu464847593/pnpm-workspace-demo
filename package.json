{
  "name": "pnpm-workspace-demo",
  "private": true,
  "preinstall": "npx only-allow pnpm",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">= 18",
    "pnpm": ">=7"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm --filter=@pnpm-workspace-demo/* run build",
    "preview": "vite preview",
    "build:utils": "pnpm run -C packages/utils build",
    "build:components": "pnpm run -C packages/components build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist"
  },
  "dependencies": {
    "@pnpm-workspace-demo/components": "workspace:^1.0.0",
    "@pnpm-workspace-demo/utils": "workspace:^1.0.0",
    "element-plus": "^2.8.8",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@vitejs/plugin-vue": "^5.1.4",
    "rimraf": "^6.0.1",
    "vite": "^5.4.10"
  }
}
